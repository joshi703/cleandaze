{
  "version": 2,
  "builds": [
    {
      "src": "functions/api.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm run build",
        "outputDirectory": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/functions/api.js"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}